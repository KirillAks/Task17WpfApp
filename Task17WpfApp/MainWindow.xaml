<Window x:Class="Task17WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:local="clr-namespace:Task17WpfApp"        
        Title="MainWindow" Height="450" Width="400">
    
    <Grid>
        <StackPanel>
            <local:ColorPicker x:Name="colorPicker" HorizontalAlignment="Center" Width="250" Height="60" VerticalAlignment="Top" ColorChanged="colorPicker_ColorChanged"></local:ColorPicker>
            <TextBlock x:Name="txb" Text="Проверка цвета" Margin="10" Padding="10" Background="White"/>
        </StackPanel>
    </Grid>
</Window>
